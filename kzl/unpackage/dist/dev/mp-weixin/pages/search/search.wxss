.sear .exhibition_header {
  background: #A9A67F;
  padding: 20rpx 0;
  width: 100%;
  height: 98rpx;
}
.sear .exhibition_header .search_content {
  width: 702rpx;
  height: 58rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin: 0 auto;
  position: relative;
}
.sear .exhibition_header .search_content .iconsearch {
  position: absolute;
  top: 50%;
  margin-top: -24rpx;
  margin-left: 10rpx;
}
.sear .exhibition_header .search_content .search {
  width: 540rpx;
  height: 58rpx;
  border-radius: 27rpx;
  background: #E2E2E2;
  color: #999999;
  font-size: 24rpx;
  padding-left: 60rpx;
}
.sear .exhibition_header .search_content .screen {
  height: 58rpx;
  text-align: center;
  line-height: 58rpx;
  margin: 0 20rpx;
}
.sear .hot_search {
  width: 702rpx;
  margin: 30rpx auto;
}
.sear .hot_search .close {
  display: inline-block;
  margin-left: 70%;
}
.sear .hot_search .hot_font {
  display: inline-block;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.sear .hot_search .hot_search_tag text {
  display: inline-block;
  color: #ffffff;
  background: #DCC18B;
  font-size: 28rpx;
  padding: 15rpx 20rpx;
  border-radius: 40rpx;
  letter-spacing: 4rpx;
  margin: 10rpx 10rpx;
}
.sear .ranking {
  width: 702rpx;
  margin: 30rpx auto;
}
.sear .ranking .ranking_font {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.sear .ranking .hot_list {
  padding-bottom: 20rpx;
  width: 702rpx;
  margin: 0 auto;
}
.sear .ranking .hot_list .serial {
  float: left;
  width: 22rpx;
  height: 22rpx;
  background: #D57464;
  border-radius: 3px;
  font-size: 14rpx;
  line-height: 22rpx;
  text-align: center;
  color: #FFFFFF;
  margin-top: 10rpx;
}
.sear .ranking .hot_list .hot_right {
  margin-left: 40rpx;
}
.sear .ranking .hot_list .hot_right .hot_title {
  height: 30rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #333333;
  line-height: 30rpx;
  margim-bottom: 20rpx;
}
.sear .ranking .hot_list .hot_right .hot_time {
  margin-top: 20rpx;
  font-size: 24rpx;
  font-weight: 400;
  height: 20rpx;
  line-height: 20rpx;
  color: #333333;
}
.sear .ranking .hot_list .hot_bor {
  width: 702rpx;
  height: 1rpx;
  background: #D2C191;
  opacity: 0.2;
  margin-top: 30rpx;
}
.sear.hot_list:nth-child(1) .serial {
  background: #D57464;
}
.sear .hot_list:nth-child(2) .serial {
  background: #D5C064;
}
.sear .hot_list:nth-child(3) .serial {
  background: #CAD564;
}

